{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "noImplicitReturns": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/config/*.json"
  ],
  "exclude": [
    "node_modules",
  ]
}